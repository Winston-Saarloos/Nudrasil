{
  "name": "nudrasil-app",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "next dev --turbopack -p 3006",
    "build": "next build",
    "start": "next start -p 3000",
    "lint": "next lint",
    "db:generate": "drizzle-kit generate",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "docker:build": "docker build -t nudrasil-app:local -f docker/production/Dockerfile .",
    "docker:build:dev": "docker build -t nudrasil-app:dev --target builder -f docker/production/Dockerfile .",
    "docker:run": "docker run -d --name nudrasil-app-local --rm -p 3000:3000 -e NODE_ENV=production nudrasil-app:local",
    "docker:stop": "docker stop nudrasil-app-local || true",
    "docker:clean": "docker rmi nudrasil-app:local || true",
    "docker:compose:up": "docker-compose -f docker/production/docker-compose.yml up -d",
    "docker:compose:down": "docker-compose -f docker/production/docker-compose.yml down",
    "docker:compose:test": "docker-compose -f docker/production/docker-compose.yml down && docker-compose -f docker/docker-compose.yml up -d --build"
  },
  "dependencies": {
    "@radix-ui/react-dialog": "^1.1.11",
    "@radix-ui/react-select": "^2.2.2",
    "@radix-ui/react-slot": "^1.2.0",
    "@tanstack/react-query": "^5.87.4",
    "@tanstack/react-query-devtools": "^5.87.4",
    "axios": "^1.12.2",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "drizzle-orm": "^0.42.0",
    "lucide-react": "^0.488.0",
    "luxon": "^3.6.1",
    "next": "15.3.0",
    "pg": "^8.14.1",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "recharts": "3.1.2",
    "tailwind-merge": "^3.2.0",
    "tw-animate-css": "^1.2.5"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4",
    "@types/luxon": "^3",
    "@types/node": "^22.14.1",
    "@types/pg": "^8",
    "@types/react": "^19.1.2",
    "@types/react-dom": "^19.1.2",
    "dotenv": "^16.5.0",
    "drizzle-kit": "^0.31.0",
    "eslint": "^9",
    "eslint-config-next": "15.3.0",
    "pm2": "^6.0.5",
    "prettier": "3.5.3",
    "tailwindcss": "^4.1.4",
    "typescript": "^5"
  },
  "packageManager": "yarn@4.9.4"
}
